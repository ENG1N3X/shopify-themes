{% style %}
  @font-face {
    font-family: 'Roboto-Regular';
    font-style: normal;
    font-weight: normal;
    src: url('{{ 'Roboto-Regular.static.woff' | asset_url }}') format('woff'),
         url('{{ 'Roboto-Regular.static.eot' | asset_url }}') format('embedded-opentype'),
         url('{{ 'Roboto-Regular.static.ttf' | asset_url }}') format('truetype');
  }
  @font-face {
    font-family: 'Roboto-Bold';
    font-style: normal;
    font-weight: bold;
    src: url('{{ 'Roboto-Bold.static.woff' | asset_url }}') format('woff'),
         url('{{ 'Roboto-Bold.static.eot' | asset_url }}') format('embedded-opentype'),
         url('{{ 'Roboto-Bold.static.ttf' | asset_url }}') format('truetype');
  }
  @font-face {
    font-family: 'Roboto-Medium';
    font-style: normal;
    font-weight: 500;
    src: url('{{ 'Roboto-Medium.static.woff' | asset_url }}') format('woff'),
         url('{{ 'Roboto-Medium.static.eot' | asset_url }}') format('embedded-opentype'),
         url('{{ 'Roboto-Medium.static.ttf' | asset_url }}') format('truetype');
  }
  @font-face {
    font-family: 'Roboto-Thin';
    font-style: normal;
    font-weight: 100;
    src: url('{{ 'Roboto-Thin.static.woff' | asset_url }}') format('woff'),
         url('{{ 'Roboto-Thin.static.eot' | asset_url }}') format('embedded-opentype'),
         url('{{ 'Roboto-Thin.static.ttf' | asset_url }}') format('truetype');
  }
{% endstyle %}