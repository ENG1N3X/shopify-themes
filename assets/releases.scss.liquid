form#form-release {
	position: fixed;
	top: 50%;
	left: 50%;
	transform: translate(-50%, -50%);
	z-index: 10;
	width: 50%;
	height: 500px;
	overflow-y: auto;
	background: #fff;
	border: 1px solid rgba(0, 0, 0, 0.4);
	// &::before {
	//   content: "";
	//   position: fixed;
	//   top: 0;
	//   left: 0;
	//   width: 100%;
	//   height: 100%;
	//   background: rgba(0, 0, 0, 0.4);
	//   z-index: 5;
	// }
	.step {
		height: 100%;
		padding: 20px;
		.grid-y {
			height: 100%;
			.btn[type="button"] {
				width: 100%;
			}
		}
		label {
			display: block;
			margin-bottom: 5px;
			font-size: 14px;
			line-height: 1.25;
		}
		input {
			margin-bottom: 5px;

			&.error-msg ~ span.error-msg {
				color: red;
			}
			&.success-msg ~ span.success-msg {
				color: green;
			}
		}
		span.error-msg {
			display: block;
			font-size: 12px;
			line-height: 1.25;
		}
	}
	.heading {
		text-transform: uppercase;
		margin: 0;
	}
}
