form#form-release {
	position: fixed;
	top: 50%;
	left: 50%;
	transform: translate(-50%, -50%);
	z-index: 10;
	width: 50%;
	height: 500px;
	overflow-y: auto;
	background: #fff;
	border: 1px solid rgba(0, 0, 0, 0.4);
	// &::before {
	//   content: "";
	//   position: fixed;
	//   top: 0;
	//   left: 0;
	//   width: 100%;
	//   height: 100%;
	//   background: rgba(0, 0, 0, 0.4);
	//   z-index: 5;
	// }
	.step {
		height: 100%;
		padding: 20px;
		.grid-y {
			height: 100%;
			.btn[type="button"],
			.btn[type="submit"] {
				width: 100%;
			}
			.cell:nth-child(2) {
				max-height: 300px;
				overflow-y: auto;
			}
		}
		label {
			display: block;
			margin-bottom: 5px;
			font-size: 14px;
			line-height: 1.25;
		}
		input {
			margin-bottom: 5px;
		}
		span.error-msg,
		p.error-msg {
			display: block !important;
			font-size: 12px;
			line-height: 1.25;
			color: red;
			margin: 0;
			&.success-msg {
				color: green;
			}
		}
	}
	.heading {
		text-transform: uppercase;
		margin: 0;
	}
	input[type="checkbox"].same-data {
		position: absolute;
		z-index: -1;
		opacity: 0;
		margin-bottom: 0;
		& + label {
			font-family: "Montserrat", sans-serif;
			font-weight: 600;
			font-size: 9px;
			letter-spacing: 0.035em;
			text-transform: uppercase;
			color: #000;
			cursor: pointer;
			display: flex;
			align-items: center;
			position: relative;
			user-select: none;
			margin-bottom: 0;
			&::before {
				content: "";
				display: inline-block;
				width: 20px;
				height: 20px;
				border: 1px solid #000000;
				margin-right: 10px;
			}
			&::after {
				content: "";
				display: block;
				position: absolute;
				width: 8px;
				height: 12px;
				top: 50%;
				left: 5px;
				transform: translateY(-50%) rotate(30deg);
				border-right: 1px solid #000;
				border-bottom: 1px solid #000;
				margin-bottom: 0;
				opacity: 0;
			}
		}
		&:checked + label::after {
			opacity: 1;
		}
	}
	.iti {
		display: block;
		.iti__selected-flag {
			background-color: #fff !important;
		}
		span.error-msg {
			position: absolute;
			padding: 5px 0;
		}
		.iti__flag {
			background-image: url("{{ 'flags.png' | asset_url }}");
			@media (-webkit-min-device-pixel-ratio: 2), (min-resolution: 192dpi) {
				background-image: url("{{ 'flags@2x.png' | asset_url }}");
			}
		}
	}
}
